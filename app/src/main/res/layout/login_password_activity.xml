<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_password_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/defaultBackground"
    tools:context="org.redborn.csatlatte.android.view.LoginPasswordActivity">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/commons_app_bar" />

        <include layout="@layout/login_password_content" />

    </android.support.design.widget.CoordinatorLayout>

    <include layout="@layout/login_password_footer" />

</android.support.v4.widget.DrawerLayout>